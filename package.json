{
  "name": "api-tuner",
  "version": "0.4.2",
  "main": "index.js",
  "type": "module",
  "license": "MIT",
  "bin": {
    "api-tuner": "./bin/tuner.sh"
  },
  "scripts": {
    "download-eye": "EYE_VERSION=11.16.4 ./lib/download-eye.js",
    "postinstall": "([ -d eye ] || npm run download-eye) && eye/install.sh --prefix=eye",
    "prepare": "husky",
    "lint": "eslint . --quiet --ignore-path .gitignore",
    "pre_test": "docker compose up -d",
    "_test": "./bin/tuner.sh --base-iri http://localhost:1080/",
    "test": "npm run _test -- tests/*.n3 tests/**/*.n3",
    "prepack": "tsc",
    "release": "changeset publish"
  },
  "files": [
    "bin",
    "logging",
    "lib/*.js",
    "lib/*.txt",
    "lib/*.ttl",
    "lib/*.sh",
    "rules"
  ],
  "dependencies": {
    "@changesets/cli": "^2.29.7",
    "@jeswr/pretty-turtle": "^1.5.0",
    "@sindresorhus/merge-streams": "^4.0.0",
    "@zazuko/env-node": "^2.1.4",
    "commander": "^13.1.0",
    "get-stream": "^9.0.1",
    "is-absolute-url": "^4.0.1",
    "jsonld": "^8.3.3",
    "rdf-validate-shacl": "^0.5.6",
    "replacestream": "^4.0.3",
    "tar": "^7.5.2"
  },
  "devDependencies": {
    "@rdfjs/types": "^1",
    "@tpluscode/eslint-config": "^0.5.0",
    "@types/jsonld": "^1.5.15",
    "@types/n3": "^1.24.2",
    "@types/rdf-validate-shacl": "^0.4.9",
    "@types/replacestream": "^4.0.4",
    "@types/yargs": "^17.0.33",
    "@typescript-eslint/eslint-plugin": "^7",
    "@typescript-eslint/parser": "^7",
    "eslint": "^8.57.1",
    "eslint-import-resolver-typescript": "^4.3.4",
    "husky": "^9.1.7",
    "lint-staged": "^15.4.3",
    "tsx": "^4.19.3",
    "typescript": "^5.8.3"
  },
  "lint-staged": {
    "*.{js,ts}": [
      "eslint --fix --quiet"
    ]
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
