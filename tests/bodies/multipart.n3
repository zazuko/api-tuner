PREFIX ex: <http://example.org/>
prefix : <https://api-tuner.described.at/test#bodies/>
PREFIX earl: <http://www.w3.org/ns/earl#>
PREFIX tuner: <https://api-tuner.described.at/>
PREFIX rdfs: <http://www.w3.org/2000/01/rdf-schema#>
PREFIX log: <http://www.w3.org/2000/10/swap/log#>
PREFIX string: <http://www.w3.org/2000/10/swap/string#>

:multiPartBodyTestCase
  a earl:TestCase ;
  rdfs:label "Multipart form upload" ;
  tuner:request [
    a tuner:Request ;
    tuner:url <http://localhost:1080/body-multipart> ;
    tuner:method "POST" ;
    tuner:body [
      tuner:form ( "upload" <file:tests/bodies/foobar.ttl> ) ;
      tuner:form ( "foo" "bar" ) ;
   ] ;
  ]
.

{
  :multiPartBodyTestCase!tuner:request tuner:response ?res .

  ?res tuner:http_code 200 .

  ?res!tuner:body
    string:matches 'Content-Disposition: form-data; name=.upload.; filename=.foobar.ttl.' ;
  #  string:matches 'Content-Disposition: form-data; name=.foo.;' ;
  .
} => {
  :multiPartBodyTestCase earl:outcome earl:passed .
} .
